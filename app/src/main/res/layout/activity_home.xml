<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.home.HomeActivity">

    <Button
        android:id="@+id/btnSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:text="SearchView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.501" />

    <Button
        android:id="@+id/btnToolbarSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ToolbarSearchView"
        app:layout_constraintLeft_toLeftOf="@+id/btnSearchView"
        app:layout_constraintRight_toRightOf="@+id/btnSearchView"
        app:layout_constraintTop_toBottomOf="@+id/btnSearchView" />

    <Button
        android:id="@+id/btnMaterialSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="MaterialSearchView"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="@+id/btnToolbarSearchView"
        app:layout_constraintRight_toRightOf="@+id/btnToolbarSearchView"
        app:layout_constraintTop_toBottomOf="@+id/btnToolbarSearchView" />

    <Button
        android:id="@+id/btnDialogMaterialSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:elevation="0dp"
        android:text="DialogMaterialSearchView"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="@+id/btnMaterialSearchView"
        app:layout_constraintRight_toRightOf="@+id/btnMaterialSearchView"
        app:layout_constraintTop_toBottomOf="@+id/btnMaterialSearchView" />
</android.support.constraint.ConstraintLayout>
